@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "My Movies"; // Changed from "Movies" to "My Movies"
}

<h1>@ViewData["Title"]</h1>

<!-- Filter Form -->
<form asp-controller="Movies" asp-action="Index" method="get" class="mb-3">
    <label class="me-2">
        Title:
        <input type="text" asp-for="SearchString" class="form-control d-inline w-auto" />
    </label>

    <label class="me-2">
        Genre:
        <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-control d-inline w-auto">
            <option value="">All</option>
        </select>
    </label>

    <label class="me-2">
        Year:
        <input type="number" asp-for="MovieYear" min="1900" max="2100" class="form-control d-inline w-auto" />
    </label>

    <input type="submit" value="Filter" class="btn btn-primary" />
</form>

<!-- Movies Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Genre)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Movies![0].Rating)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies!)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>